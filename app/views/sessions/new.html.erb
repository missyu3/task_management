<h1></h1>
<% if @user && @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user,scope: :session, url: sessions_path, local: true) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-2 text-right">
        <%= f.label :email %> 
      </div>
      <div class="col-md-10">
        <%= f.email_field :email, { class: "form-control" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2 text-right">
        <%= f.label :password %>
      </div>
      <div class="col-md-10">
        <%= f.password_field :password, { class: "form-control" } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
      </div>
      <div class="col-md-8">
        <%= f.submit "ログイン", { class: "btn btn-info login_btn" } %>
      </div>
    </div>
  </div>
<% end %>