<h1><%= I18n.t("display.admin_page", name: current_user.name) %></h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>権限</th>
      <th>担当タスク</th>
      <th>更新日時</th>
      <th>作成日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.admin  %></td>
        <td><%= user.tasks.count %></td>
        <td><%= format_date(user.updated_at) %></td>
        <td><%= format_date(user.created_at) %></td>
        <% if user.id == current_user.id %>
          <td class = "text-center">ー</td>
        <% elsif user.admin %>
          <td><%= link_to I18n.t("button.delete_admin"), admin_user_path(user.id) ,method: :delete ,id: "delete_#{user.id}", class: "btn btn-danger pull-left"%></td>
        <% else %>
          <td><%= link_to I18n.t("button.attach_admin"), admin_user_path(user.id) ,method: :put, id: "edit_#{user.id}", class: "btn btn-primary pull-left" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>