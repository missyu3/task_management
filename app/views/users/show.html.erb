<h1><%= I18n.t("display.user_page", name: @user.name) %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm-2 text-right">
      <%= I18n.t("activerecord.attributes.user.name") %>
    </div>
    <div class="col-sm-10">
      <%= @user.name %>
    </div>
    <div class="col-sm-2 text-right">
      <%= I18n.t("activerecord.attributes.user.email") %>
    </div>
    <div class="col-sm-10">
      <%= @user.email %>
    </div>
    <div class="col-sm-2 text-right"></div>
    <div class="col-sm-10">
      <% if @user.admin %>
        <%= link_to "管理者画面", admin_user_path(@user.id),class: "btn btn-info pull-left" %>
      <% end %>
        <%= link_to "タスク一覧", tasks_path,class: "btn btn-info pull-left" %>
    </div>
    <table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>担当者</th>
      <th>コンテンツ</th>
      <th>状態</th>
      <th><%= I18n.t("display.limit") %></th>
      <th><%= I18n.t("display.priority") %></th>
      <th>作成日時</th>
    </tr>
  </thead>
  <tbody>
    <% @user.tasks.each do |task| %>
      <tr>
        <td class="test_title">
          <%= link_to task.title, task_path(task.id) %>
        </td>
        <td><%= task.user.name %></td>
        <td><%= task.content %></td>
        <td><%= view_task_status(task.status) %></td>
        <td><%= format_date(task.limit) %></td>
        <td><%= view_priority_status(task.priority) %></td>
        <td><%= format_date(task.created_at) %></td>
        <td><%= link_to I18n.t("button.update"), edit_task_path(task.id) ,id: "edit_#{task.id}", class: "btn btn-primary pull-left" %></td>
        <td><%= link_to I18n.t("button.delete"), task_path(task.id) ,method: :delete ,id: "delete_#{task.id}", class: "btn btn-danger pull-left"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>








