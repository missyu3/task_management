<h1><%= I18n.t("display.show") %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm-2 text-right">
      <%= I18n.t("activerecord.attributes.task.title") %>
    </div>
    <div class="col-sm-10">
      <%= @task.title %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 text-right">
      <%= I18n.t("activerecord.attributes.task.content") %>
    </div>
    <div class="col-sm-10">
      <%= @task.content %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 text-right">
      <%= I18n.t("activerecord.attributes.task.status") %>
    </div>
    <div class="col-sm-10">
      <%= view_task_status(@task.status) %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 text-right">
      <%= I18n.t("activerecord.attributes.task.limit") %>
    </div>
    <div class="col-sm-10">
      <%= format_date(@task.limit) %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 text-right">
    </div>
    <div class="col-sm-10 text-right">
      <%= link_to I18n.t("button.update"), edit_task_path(@task.id), { class: "btn btn-primary pull-left" } %>
      <%= link_to I18n.t("button.delete"), task_path(@task.id), class: "btn btn-danger pull-left"  ,method: :delete %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 text-right">
    </div>
    <div class="col-sm-10">
    </div>
  </div>
</div>








